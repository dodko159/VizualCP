    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "types": ["grecaptcha", "node"]
